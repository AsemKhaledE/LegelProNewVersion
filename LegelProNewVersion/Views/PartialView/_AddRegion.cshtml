@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@model LegelProNewVersion.Models.tbl_Areas

<link href="/css/style-popup-add-client.css" rel="stylesheet" />

<div class="modal fade" id="regionAddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@localizer["add-a-new-region"]</h5>
                <button type="button" id="closeRegionAddBtn" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="modal-body">
                    <div class="row g-4">
                        <div class="col-2">
                            <label asp-for="AreaArabicName">@localizer["name-arabic"]</label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="AreaArabicName" type="text" class="form-control" required="required" />
                        </div>
                        <span asp-validation-for="AreaArabicName" class="text-danger"></span>
                        <div class="col-2">
                            <label asp-for="AreaEnglishName">@localizer["name-english"]</label>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="AreaEnglishName" type="text" class="form-control" required="required" />
                        </div>
                        <span asp-validation-for="AreaEnglishName" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="mainCloseJobAddBtn" class="btn btn-secondary" data-dismiss="modal">@localizer["close"]</button>
                    <button type="submit" class="btn btn-primary color-btnSave" id="btnAdd">@localizer["save"]</button>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" id="mainCloseRegionAddBtn" class="btn btn-secondary" data-dismiss="modal">@localizer["close"]</button>
                <button type="button" class="btn btn-primary color-btnSave" id="btnAdd">@localizer["save"]</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">

    $('#showModalRegionAddBtn').click(function () {

        $('#regionAddModal').modal('show');
    });
    $('#closeRegionAddBtn').click(function () {

        $('#regionAddModal').modal('toggle');
    });
    $('#mainCloseRegionAddBtn').click(function () {

        $('#regionAddModal').modal('toggle');
    });
</script>
