@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="modal fade" id="addNotificationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="margin-top: 70px;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label color-font" for="exampleRadios1">
                       كل التنبيهات
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                    <label class="form-check-label color-font" for="exampleRadios2">
                       تنبيهات جديدة فقط
                    </label>
                </div>
                <div class="form-check md-">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
                    <label class="form-check-label color-font" for="exampleRadios3">
                        تنبيهات قديمة فقط
                    </label>
                </div>
                <p class="modal-title text-style-notification" id="exampleModalLabel">التنبيهات</p>
                <button type="button" id="closeClientAddBtn" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="accordion-item" style="border:none;">
                    <h2 class="accordion-header" id="panelsStayOpen-Notification">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-NotificationOne" aria-expanded="false" aria-controls="panelsStayOpen-NotificationOne">
                            <i class="fas fa-bell"></i>
                            كل التنبيهات
                        </button>
                    </h2>
                    <div id="panelsStayOpen-NotificationOne" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-Notification">
                        <ul class="dropdownlist-item style-icon-noti">
                            <li class="item-sidebar-dropdown width-drop-noti"><i class="fas fa-bell style-icon-noti"></i><a></a></li>
                            <li class="item-sidebar-dropdown width-drop-noti"><i class="fas fa-bell style-icon-noti"></i><a></a></li>
                            <li class="item-sidebar-dropdown width-drop-noti"><i class="fas fa-bell style-icon-noti"></i><a></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">

    $('#showNotificationAddBtn').click(function () {

        $('#addNotificationModal').modal('show');
    });
    $('#closeClientAddBtn').click(function () {

        $('#addNotificationModal').modal('toggle');
    });
    $('#mainCloseClientAddBtn').click(function () {

        $('#addNotificationModal').modal('toggle');
    });
</script>
