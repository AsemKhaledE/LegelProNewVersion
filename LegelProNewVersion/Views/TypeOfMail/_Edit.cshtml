@model tbl_TypeOfMail

@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer

<form asp-action="Edit" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TypeOfMailId" />
    <div class="modal-body">
        <div class="row g-4">
            <div class="col-2">
                <label asp-for="TypeOfMailArabicName">@localizer["name-arabic"]</label>
            </div>
            <div class="col-md-4">
                <input asp-for="TypeOfMailArabicName" type="text" class="form-control" required="required" />
            </div>
            <div class="col-2">
                <label asp-for="TypeOfMailEnglishName">@localizer["name-english"]</label>
            </div>
            <div class="col-md-4">
                <input asp-for="TypeOfMailEnglishName" type="text" class="form-control" required="required" />
            </div>
            <div class="col-2">
                <label>@localizer["Department"]</label> 
            </div>
            <div class="col-md-4">
                <select asp-for="DepartmentId" class="form-control icon-down" style="width:100%; height:45px;" asp-items="ViewBag.Departments" class="form-control">
                </select>
            </div>
            <div class="col-2">
                <label>@localizer["TypeMail"]</label>
            </div>
            <div class="col-md-4">
                <select asp-for="tbl_TypeMail" class="form-control icon-down" style="width:100%; height:45px;" asp-items="Html.GetEnumSelectList<tbl_TypeMail>()" class="form-control">
                </select>
            </div>
        </div>
        <span asp-validation-for="TypeOfMailEnglishName" class="text-danger"></span>
        <span asp-validation-for="TypeOfMailArabicName" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <a href="/TypeOfMail/Index" type="button" id="mainCloseBtn" class="btn btn-secondary" data-dismiss="modal">@localizer["close"]</a>
        <button type="submit" class="btn btn-primary color-btnSave">@localizer["save"]</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}