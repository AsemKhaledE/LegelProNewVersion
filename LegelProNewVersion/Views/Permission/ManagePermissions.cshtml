@model LegelProNewVersion.ViewModels.UserPagesViewModel
@{
    ViewData["Title"] = "Manage Roles";
}

<form method="post">
    <link href="/css/font-client.css" rel="stylesheet">
    <link href="/css/icons-setting.css" rel="stylesheet">
    <div class="col-sm-6 size-card-header result-search size-header-branch">
        <div class="card">
            <div class="card-header">
                <div class="row g-5">
                    <div class="col-auto">
                        <i class="material-icons icons">settings</i>
                       @Model.UserName
                       <br />
                        Add / Remove Pages
                    </div>
                </div>
            </div>
            <div class="card-body">
                <input type="hidden" asp-for="UserId" />
                @for (int i = 0; i < Model.AllPages.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.AllPages[i].PageId" />
                        <input type="hidden" asp-for="@Model.AllPages[i].Name" />
                        <input asp-for="@Model.AllPages[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.AllPages[i].IsSelected">
                            @Model.AllPages[i].Name
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="/Employee/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>