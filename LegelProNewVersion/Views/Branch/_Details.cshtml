@model tbl_Branch

@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<form method="post" class="row g-3">
    <input type="hidden" asp-for="BranchId" />
    <div class="modal-body">
        <div class="row g-4">
            <div class="col-2">
                <label asp-for="BranchArabicName">@localizer["name-arabic"]</label>
            </div>
            <div class="col-md-4">
                @Html.DisplayFor(model => model.BranchArabicName)
            </div>
            <div class="col-2">
                <label asp-for="BranchEnglishName">@localizer["name-english"]</label>
            </div>
            <div class="col-md-4">
                @Html.DisplayFor(model => model.BranchEnglishName)
            </div>

            @if (isRTL)
            {
                <div class="col-2">
                    <label>@localizer["areas"]</label>
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.tbl_Areas.AreaArabicName)
                </div>
                <div class="col-2">
                    <label>@localizer["ApproveStatus"]</label>
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.tbl_ApproveStatus.ApproveArabicName)
                </div>
            }
            else
            {
                <div class="col-2">
                    <label>@localizer["areas"]</label>
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.tbl_Areas.AreaEnglishName)
                </div>
                <div class="col-2">
                    <label>@localizer["ApproveStatus"]</label>
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.tbl_ApproveStatus.ApproveEnglishName)
                </div>
            }
            <div class="col-2">
                <label>@localizer["ReasonForRejection"]</label>
            </div>
            <div class="col-md-4">
                @Html.DisplayFor(model => model.ReasonForRejection)
            </div>

            
        </div>
    </div>
    <div class="modal-footer">
        <a href="/Branch/Index" type="button" class="btn btn-secondary" data-dismiss="modal">@localizer["close"]</a>
    </div>
</form>
