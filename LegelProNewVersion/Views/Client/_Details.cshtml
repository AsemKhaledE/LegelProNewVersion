@model tbl_Client
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer

<form method="post" class="row g-3">
    <input type="hidden" asp-for="BranchId" />
    <div class="modal-body">
        <div class="row g-4">
            <div class="col-2">
                <label  asp-for="ClientName"> @localizer["ClientName"]</label>
            </div>
            <div class="col-md-4">
                <input readonly asp-for="ClientName" type="text" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="TheDeviceName"> @localizer["TheDeviceName"]</label>
            </div>
            <div class="col-md-4">
                <input readonly asp-for="TheDeviceName" type="text" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="IdentificationNumber"> @localizer["IdentificationNumber"]</label>
            </div>
            <div class="col-md-4">
                <input readonly asp-for="IdentificationNumber" type="number" class="form-control"/>
            </div>
            <div class="col-2">
                <label asp-for="Keywords"> @localizer["Keywords"]</label>
            </div>
            <div class="col-md-4">
                <input readonly asp-for="Keywords" type="text" class="form-control"/>
            </div>
            <div class="col-2">
                <label asp-for="NationalNumber"> @localizer["NationalNumber"]</label>
            </div>
            <div class="col-md-4">
                <input readonly asp-for="NationalNumber" type="number" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Address"> @localizer["Address"]</label>
            </div>
            <div class="col-md-4">
                <input readonly asp-for="Address" type="text" class="form-control" />
            </div>
            <div class="col-2">
                <label> @localizer["BankName"]</label>
            </div>
            <div class="col-md-4">
                <select readonly asp-for="BankId" class="form-control icon-down" style="width:100%; height:45px;" asp-items="ViewBag.Banks" class="form-control">
                </select>
            </div>
            <div class="col-2">
                <label> @localizer["Branch"]</label>
            </div>
            <div class="col-md-4">
                <select readonly asp-for="BranchId" class="form-control icon-down" style="width:100%; height:45px;" asp-items="ViewBag.Branchs" class="form-control">
                </select>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a type="button" href="/Client/Index" class="btn btn-secondary" data-dismiss="modal">@localizer["close"]</a>
    </div>
</form>
