@model LegelProNewVersion.Models.tbl_MainStyle
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Ehm.styles.css" asp-append-version="true" />
<link href="/css/main-config-style.css" rel="stylesheet" />
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="/SystemConfig/MainConfig">System Config</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" aria-current="page" href="/SystemConfig/LoginStyle">Login Style</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="#">Main Style</a>
    </li>
</ul>
<h2>Main Style</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditMainStyle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StyleNameArabic" class="control-label"></label>
                <input asp-for="StyleNameArabic" class="form-control" />
                <span asp-validation-for="StyleNameArabic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StyleNameEnglish" class="control-label"></label>
                <input asp-for="StyleNameEnglish" class="form-control" />
                <span asp-validation-for="StyleNameEnglish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionArabic" class="control-label">Description Arabic</label>
                <input asp-for="DescriptionArabic" class="form-control" />
                <span asp-validation-for="DescriptionArabic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionEnglish" class="control-label">Description English</label>
                <input asp-for="DescriptionEnglish" class="form-control" />
                <span asp-validation-for="DescriptionEnglish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WelcomePageImagePath" class="control-label">WelcomePage Image</label>
                <input asp-for="WelcomePageImagePath" class="form-control" />
                <span asp-validation-for="WelcomePageImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-info"/>
                <a asp-action="MainStyle" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
</div>
 