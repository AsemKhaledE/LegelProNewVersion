@model IEnumerable<LegelProNewVersion.Models.tbl_LoginStyle>
<link href="/css/main-config-style.css" rel="stylesheet" />
<link href="~/css/font.css" rel="stylesheet" />
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Ehm.styles.css" asp-append-version="true" />
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="/SystemConfig/MainConfig">System Config</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">Login Style</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/SystemConfig/MainStyle">Main Style</a>
    </li>
</ul>

<h2>Login Style</h2>
<p>
    <a class="btn btn-success" asp-action="CreateLoginStyle">Create New Login Style</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StyleNameArabic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StyleNameEnglish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextFont)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginBackground)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeInterval)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMultiImage)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StyleNameArabic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StyleNameEnglish)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextColor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextFont)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginColor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginBackground)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeInterval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsMultiImage)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="EditLoginStyle" asp-route-id="@item.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>